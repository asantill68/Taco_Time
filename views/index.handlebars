<div class="container">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-6 text-center text-danger"><span class="fa fa-fire-extinguisher"></span>Eat El Taco!</h1>
            <p class="lead text-center text-danger font-weight-bold">Feast on the classics or make one of your own!!</p>
        </div>
    </div>
    <div class="row">
{{!-- Display all data from tacos_db         --}}
        <div class="col-md-4 text-center" class="task">
            <div class="row">
                {{#each taco_data}}
                    {{#unless this.devoured}}
                <div class="col-md-8 text-center">
                    <pre>{{this.id}}.  {{this.taco_name}}</pre>
                </div>
{{!-- Creates a button to devour taco --}}
                <div class="col-md-4 text-center">
                    <form method="POST" action="/tacos/update?_method=PUT" class="button-size">
                        <input type="hidden" name="taco_id" type="text" value="{{this.id}}">
                        <br>
                        <button type="submit" class="btn btn-default">COME El TACO!!</button>
                    </form>
                </div>
                    {{/unless}}
                {{/each}}
            </div>
        </div>
{{!-- Displays devoured tacos in another location  --}}
        <div class="col-xs-6 text-center" class="task">
            {{#each taco_data}}
                {{#if this.devoured}}
                <input class="form-control" type="text" placeholder="{{this.id}}. {{this.taco_name}}" readonly>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>
{{!-- Add tacos to the database --}}
<div class="container">
    <div class="row">
        <div class="col-md-12 text-center enter_section">
            <form action="/tacos/create" method="POST">
                <input type="text" name="taco_name" class="form-control" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="text-center-button">Submit</button>
            </form>
            <p>Enter a taco you would like to devour!!</p>
        </div>
    </div>
</div>